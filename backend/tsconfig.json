{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "paths": {
      "@interfaces/*": [
        "interfaces/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "report-dir": "./coverage",
  "exclude": [
    "node_modules",
    "test"
  ],
  "types": [
    "typePatches",
    "mocha",
  ]
}